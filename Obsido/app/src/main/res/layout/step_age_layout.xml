<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/age_number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:np_dividerColor="?attr/colorPrimary"
        app:np_selectedTextColor="?attr/colorPrimary"
        app:np_orientation="horizontal"
        app:np_selectedTextSize="36sp"
        app:np_dividerDistance="44sp"
        app:np_textColor="#000000"
        app:np_textSize="32sp" />

</LinearLayout>