<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/maleGender"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/male"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_gender_male"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/maleGenderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/male"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:text="@string/stepper_add_partner_gender_male"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/femaleGender"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/maleGender">

                <ImageView
                    android:id="@+id/female"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_gender_female"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/femaleGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/female"
                    android:layout_marginTop="24dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/stepper_add_partner_gender_female"
                    android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>