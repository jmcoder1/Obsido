<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/partner_profile_img"
        android:layout_width="@dimen/partner_profile_img_width"
        android:layout_height="@dimen/partner_profile_img_height"
        android:layout_marginEnd="@dimen/partner_profile_img_marginRight"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/partner_main_img_text_view"
        android:layout_width="@dimen/partner_profile_img_width"
        android:layout_height="@dimen/partner_profile_img_height"
        android:gravity="center"
        android:background="@drawable/partner_profile_text_circle"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:visibility="invisible"
        tools:text="B"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/partner_text_info"
        android:layout_toEndOf="@id/partner_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/partner_profile_img_marginRight"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#2B3D4D"
            tools:text="Amy Smith"/>

        <TextView
            android:id="@+id/partner_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/textColorSecondary"
            tools:text="It's complicated"/>
    </LinearLayout>

</RelativeLayout>